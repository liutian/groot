{
  "name": "groot-cloud",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "db:reset": "mikro-orm schema:drop --run && mikro-orm schema:create --run",
    "db:update": "mikro-orm schema:update --run",
    "db:seeder": "mikro-orm seeder:run",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts"
    ]
  },
  "dependencies": {
    "@mikro-orm/cli": "5.6.15",
    "@mikro-orm/core": "5.6.15",
    "@mikro-orm/mysql": "5.6.15",
    "@mikro-orm/nestjs": "5.1.7",
    "@mikro-orm/reflection": "5.6.15",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "@nestjs/common": "9.3.10",
    "@nestjs/core": "9.3.10",
    "@nestjs/platform-express": "9.3.10",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.0",
    "vm2": "3.9.14"
  },
  "devDependencies": {
    "@mikro-orm/seeder": "5.6.15",
    "@nestjs/cli": "9.3.0",
    "@nestjs/schematics": "9.0.4",
    "@types/express": "4.17.17",
    "@types/node": "18.15.3",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.4",
    "source-map-support": "0.5.21",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2"
  }
}