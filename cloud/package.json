{
  "name": "cloud",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "db:reset": "mikro-orm schema:drop --run && mikro-orm schema:create --run",
    "db:update": "mikro-orm schema:update --run",
    "db:seeder": "mikro-orm seeder:run",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts"
    ]
  },
  "dependencies": {
    "@mikro-orm/cli": "5.1.3",
    "@mikro-orm/core": "5.1.3",
    "@mikro-orm/mysql": "5.1.3",
    "@mikro-orm/nestjs": "5.0.1",
    "@mikro-orm/reflection": "5.1.3",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "@nestjs/common": "8.4.5",
    "@nestjs/core": "8.4.5",
    "@nestjs/platform-express": "8.4.5",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@mikro-orm/seeder": "5.1.3",
    "@nestjs/cli": "8.2.5",
    "@nestjs/schematics": "8.0.11",
    "@types/express": "4.17.13",
    "@types/node": "17.0.33",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.23.0",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.6.2",
    "source-map-support": "0.5.21",
    "ts-loader": "9.3.0",
    "ts-node": "10.7.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.6.4"
  }
}