{
  "name": "groot-cloud",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "db:reset": "mikro-orm schema:drop --run && mikro-orm schema:create --run",
    "db:update": "mikro-orm schema:update --run",
    "db:seeder": "mikro-orm seeder:run",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts"
    ]
  },
  "dependencies": {
    "@mikro-orm/cli": "5.5.3",
    "@mikro-orm/core": "5.5.3",
    "@mikro-orm/mysql": "5.5.3",
    "@mikro-orm/nestjs": "5.1.2",
    "@mikro-orm/reflection": "5.5.3",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "@nestjs/common": "9.2.0",
    "@nestjs/core": "9.2.0",
    "@nestjs/platform-express": "9.2.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.7"
  },
  "devDependencies": {
    "@mikro-orm/seeder": "5.5.3",
    "@nestjs/cli": "9.1.5",
    "@nestjs/schematics": "9.0.3",
    "@types/express": "4.17.14",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.0",
    "source-map-support": "0.5.21",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0"
  }
}